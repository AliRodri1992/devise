<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item">
      <%= link_to root_path, class: 'color' do %>
        Inicio
      <% end %>
    </li>
    <li class="breadcrumb-item active" aria-current="page">
      <%= link_to users_path, class: 'color' do %>
        Catalogo de Usuarios
      <% end %>
    </li>
  </ol>
</nav>
<div class="bg-white well">
  <table class="table table-hover pt-5">
    <thead>
      <tr class="text-center">
        <th scope="col">#</th>
        <th scope="col">Usuario</th>
        <th scope="col">Email</th>
        <th scope="col">Mostrar</th>
        <th scope="col">Editar</th>
        <th scope="col">Eliminar</th>
      </tr>
    </thead>
    <tbody>
      <% unless @users.blank?
           count= 1 %>
        <% @users.each do |user| %>
          <tr>
            <th class="text-center" scope="row"><%= count %></th>
            <td><%= user.username %></td>
            <td><%= user.email %></td>
            <td class="text-center">
              <%= link_to user_path(user) do %>
                <i class="fas fa-eye warning"></i>
              <% end %>
            </td>
            <td class="text-center">
              <%= link_to edit_user_path(user) do %>
                <i class="fas fa-edit primary"></i>
              <% end %>
            </td>
            <td class="text-center"><i class="fas fa-trash-alt danger"></i></td>
          </tr>
          <% count += 1 %>
        <% end %>
      <% end %>
    </tbody>
  </table>
  <%= paginate(@users) %>
</div>