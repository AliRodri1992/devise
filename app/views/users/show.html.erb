<nav aria-label="breadcrumb color">
  <ol class="breadcrumb">
    <li class="breadcrumb-item">
      <%= link_to root_path, class: 'color' do %>
        Inicio
      <% end %>
    </li>
    <li class="breadcrumb-item">
      <%= link_to users_path, class: 'color' do %>
        Catalogo de Usuarios
      <% end %>
    </li>
    <li class="breadcrumb-item active" aria-current="page">
      <%= link_to user_path(@user), class: 'color' do %>
        Informaci√≥n de Usuario
      <% end %>
    </li>
  </ol>
</nav>
<div class="bg-white well">
  <ul class="nav nav-tabs" id="myTab" role="tablist">
    <li class="nav-item">
      <a class="nav-link active color" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false">
        <i class="fas fa-user"></i>  Perfil de Usuario
      </a>
    </li>
    <li class="nav-item">
      <a class="nav-link color" id="contact-tab" data-toggle="tab" href="#contact" role="tab" aria-controls="contact" aria-selected="false">
        <i class="fas fa-address-book"></i>  Datos Personales
      </a>
    </li>
  </ul>
  <div class="container">
    <div class="tab-content pt-4" id="myTabContent">
      <div class="tab-pane fade show active" id="profile" role="tabpanel" aria-labelledby="profile-tab">
        <div class="row">
          <div class="col-12 col-sm-3 text-center">
              <span class="profile-picture">
                <% unless @user.avatar.blank? %>
                  <%= image_tag(@user.avatar) %>
                <% else %>
                  <%= image_tag('missing.png', class: 'img-responsive', :width => 190, :height => 210) %>
                <% end %>
              </span>

          </div>
          <div class="col-12 col-sm-9">
            <div class="profile-user-info">
              <div class="profile-info-row">
                <div class="profile-info-name">
                  Username
                </div>
                <div class="profile-info-value">
                  <span><%= @user.username %></span>
                </div>
              </div>
              <div class="profile-info-row">
                <div class="profile-info-name">
                  Email
                </div>
                <div class="profile-info-value">
                  <span><%= @user.email %></span>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="tab-pane fade" id="contact" role="tabpanel" aria-labelledby="contact-tab">...</div>
    </div>
  </div>
  <div class="pl-3 pt-3 pb-3">
    <%= link_to users_path, class: 'btn btn-primary btn-sm' do %>
      Regresar
    <% end %>
  </div>
</div>