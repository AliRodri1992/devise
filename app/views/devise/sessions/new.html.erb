<div style="background: #006BAA;">
  <div class="container-login">
    <div class="wrap-login">
      <div class="login-form-title">
        <span class="login-form-title-1"><%= t('.sign_in') %></span>
      </div>

      <%= form_for(resource, as: (resource_name), html: {class: "login-form validate-form"}, url: session_path(resource_name)) do |f| %>
        <div class="wrap-input m-b-26">
          <%= f.label :username, class: "label-input" %>
          <%= f.text_field :username, autofocus: true, class: 'input input-height', placeholder: 'Escriba su nombre usuario' %>
        </div>
        <div class="wrap-input m-b-26">
          <%= f.label :password, class: "label-input" %>
          <%= f.password_field :password, autocomplete: "off", class: 'input input-height', placeholder: 'Escriba su contraseÃ±a' %>
        </div>
        <% if devise_mapping.rememberable? %>
          <div class="contact-form-checkbox">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me, class: 'label-checkbox' %>
          </div>
        <% end %>
        <div class="flex-sb-m w-full p-b-30">
          <%= render "devise/shared/links" %>
        </div>
        <div class="container-login-form-btn">
          <%= f.submit t('.sign_in'), class: 'btn btn-lg btn-block btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>